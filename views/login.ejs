<%- include("partials/header") %>
div class="container img-thumbnail">
    <h1>edit <%=blog.title%></h1>
    <hr>
    <form class="form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="blog[title]" required value="<%=blog.title%>" id="">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Image url</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="blog[image]" required value="<%=blog.image%>" id="">
            </div>
            
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"> Description</label>
            <div class="col-sm-10 ">
                <textarea class="form-control" name="blog[body]" cols="30" required rows="10"><%-blog.body%></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary bg-voilet">Submit</button>
    </form>
</div>
<%- include("partials/footer") %>